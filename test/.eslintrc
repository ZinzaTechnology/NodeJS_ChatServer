{
    "env": {
      "mocha": true
    },
    "plugins": [
      "chai-friendly"
    ],
    "rules": {
      "no-unused-vars": [
        "error",
        {
          "varsIgnorePattern": "should|expect"
        }
      ],
      "no-unused-expressions": 0,
      "chai-friendly/no-unused-expressions": 2
    }
}